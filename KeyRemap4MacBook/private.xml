<?xml version="1.0"?>
<root>

  <deviceproductdef>
    <productname>APPLE_EXTERNAL_KEYBOARD_0x024f</productname>
    <productid>0x024f</productid>
  </deviceproductdef>

  <item>
    <name>My custom settings</name>

    <item>
      <name>Change "International" key to `Hyper` and CapsLock</name>
      <appendix>Tap Control_L for CapsLock, Hold Control_L for ⇧⌃⌥⌘</appendix>

      <identifier>private.international_to_capslock_hyper</identifier>
      <autogen>
        __KeyOverlaidModifier__
        KeyCode::DANISH_DOLLAR,
        KeyCode::CONTROL_L, MODIFIERFLAGS_CCOS_L,
        KeyCode::CAPSLOCK
      </autogen>
    </item>

    <item>
      <name>Change F19 to Escape and Control</name>
      <appendix>Tap F19 for Escape, Hold F19 for Control_L</appendix>
      <appendix>Works well with using Seil to remap CapsLock to F19(code 80).</appendix>

      <identifier>private.remap.f19_escape_control</identifier>
      <autogen>
        __KeyOverlaidModifier__
        KeyCode::F19,
        KeyCode::CONTROL_L,
        KeyCode::ESCAPE
      </autogen>
    </item>

    <item>
      <name>Change Left Control to `Hyper` and CapsLock</name>
      <appendix>Tap Control_L for CapsLock, Hold Control_L for ⇧⌃⌥⌘</appendix>

      <identifier>private.control_l_to_capslock_hyper</identifier>
      <autogen>
        __KeyOverlaidModifier__
        KeyCode::CONTROL_L,
        KeyCode::CONTROL_L, MODIFIERFLAGS_CCOS_L,
        KeyCode::CAPSLOCK
      </autogen>
    </item>

    <item>
      <name>Change Right Control to CapsLock and Control</name>
      <appendix>Tap Control_R for CapsLock, Hold Control_R for Control_R</appendix>

      <identifier>private.f19_to_capslock_control</identifier>
      <autogen>
        __KeyOverlaidModifier__
        KeyCode::CONTROL_R,
        KeyCode::CONTROL_R,
        KeyCode::CAPSLOCK
      </autogen>
    </item>


    <include path="force_shift.xml" />
    <include path="tmux_related.xml" />

    <item> <name>Change PC Application Key</name>

      <item><name>Application key to Command_R key</name>
        <identifier>private.pc_application2commandR</identifier>
        <autogen>__KeyToKey__ KeyCode::PC_APPLICATION, KeyCode::COMMAND_R</autogen>
      </item>

      <item>
        <name>Application key to Control_R key</name>

        <identifier>private.pc_application2controlR</identifier>
        <autogen>__KeyToKey__ KeyCode::PC_APPLICATION, KeyCode::CONTROL_R</autogen>
      </item>
    </item>

    <item>
      <name>Device Specific Mixed Settings</name>

      <item>
        <name>For MacBook pro (vid/did: 0x05ac,0x0245)</name>

        <item>
          <name>Swap Command and Option on Apple keyboards</name>
          <identifier>private.swap_command_and_option_apple</identifier>
          <appendix>(Silly Apple, ISO/IEC 9995-2 is for everyone!)</appendix>

          <block>
            <device_only>
              DeviceVendor::APPLE_COMPUTER,
              DeviceProduct::APPLE_INTERNAL_KEYBOARD_TRACKPAD_0x0245
            </device_only>
            <autogen>__KeyToKey__ KeyCode::COMMAND_L, KeyCode::OPTION_L</autogen>
            <autogen>__KeyToKey__ KeyCode::COMMAND_R, KeyCode::OPTION_R</autogen>
            <autogen>__KeyToKey__ KeyCode::OPTION_L, KeyCode::COMMAND_L</autogen>
            <autogen>__KeyToKey__ KeyCode::OPTION_R, KeyCode::COMMAND_R</autogen>
          </block>

          <block>
            <device_only>
              DeviceVendor::APPLE_COMPUTER,
              DeviceProduct::APPLE_EXTERNAL_KEYBOARD_0x024f
            </device_only>
            <autogen>__KeyToKey__ KeyCode::COMMAND_L, KeyCode::OPTION_L</autogen>
            <autogen>__KeyToKey__ KeyCode::COMMAND_R, KeyCode::OPTION_R</autogen>
            <autogen>__KeyToKey__ KeyCode::OPTION_L, KeyCode::COMMAND_L</autogen>
            <autogen>__KeyToKey__ KeyCode::OPTION_R, KeyCode::COMMAND_R</autogen>
          </block>
        </item>
      </item>
    </item>
  </item>
</root>
